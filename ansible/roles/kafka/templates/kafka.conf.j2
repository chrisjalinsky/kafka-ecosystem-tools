description "Kafka"

limit nofile 32768 32768

start on runlevel [2345]
stop on [!12345]

respawn
respawn limit 2 5

umask 007

kill timeout 300

setuid {{ kafka_user }}
setgid {{ kafka_group }}

script
    exec {{ kafka_dir }}/bin/kafka-server-start.sh {{ kafka_dir }}/config/server.properties
end script
