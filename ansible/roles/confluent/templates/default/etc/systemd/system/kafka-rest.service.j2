[Unit]
Description=Kafka Rest Proxy
Documentation=http://docs.confluent.io/current/kafka-rest/docs/index.html
After=network.target

[Service]
User={{ confluent_user }}
ExecStart={{ confluent_dir }}/bin/kafka-rest-start {{ confluent_dir }}/{{ confluent_kafka_rest_conf_dir }}/{{ confluent_kafka_rest_conf_file }}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
