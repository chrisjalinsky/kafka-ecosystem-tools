[Unit]
Description=Zookeeper
Documentation=https://zookeeper.apache.org/
After=network.target

[Service]
User={{ confluent_user }}
ExecStart={{ confluent_dir }}/{{ confluent_bin_dir }}/zookeeper-server-start {{ confluent_dir }}/{{ confluent_zk_conf_dir }}/{{ confluent_zk_conf_file }}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
